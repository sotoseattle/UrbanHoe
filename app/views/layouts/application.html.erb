<!DOCTYPE html>
<html>
<head>
  <title>Urbanhoe</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
</head>
<body>
  <div id="wrap">

    <div class='messages'>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <div>
      <%= yield %>
    </div>

  </div> <!-- wrap -->

  <div id="footer">
    <div class="container-fluid row ff" align="left">
      <div class="col-md-4 f1">
        <span class='tiny'>&copy; 2014, Urbanhoe LLC</span>
      </div>
      <div class="col-md-8 f2" align="right">
        <%= link_for_admins %>
      </div>
    </div>
  </div>
</body>
</html>
